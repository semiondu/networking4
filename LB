#establish connections with servers.
serv1= socket.socket(socket.AF_INET, socket.SOCK_STREAM)
serv1.connect(192.168.0.101)

serv2= socket.socket(socket.AF_INET, socket.SOCK_STREAM)
serv2.connect(192.168.0.102)

serv3= socket.socket(socket.AF_INET, socket.SOCK_STREAM)
serv3.connect(192.168.0.103)

#listen to input from clients
with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as hostSocket:
    hostSocket.bind((HOST, PORT))
    hostSocket.listen(1)
    conn, addr = hostSocket.accept()
    with conn:
        print('Connected by', addr)
        while True:
            data = conn.recv(1024)
            if not data: break
            conn.sendall(data)
